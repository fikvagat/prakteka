<Window x:Class="prakteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prakteka"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="250" Width="400">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Логин"/>
        <Label Content="пароль" Grid.Row="1"/>

        <TextBox x:Name="txtLogin" Grid.Column="1"/>
        <PasswordBox x:Name="txtPass" Grid.Column="1" Grid.Row="1"/>

        <Button x:Name="btnGuest" Content="Войти как гость" Grid.Column="0" Grid.Row="2" Click="btnGuest_Click"/>
        <Button x:Name="btnEnter" Content="Войти" Grid.Column="1" Grid.Row="2" Click="btnEnter_Click"/>
    </Grid>
</Window>
